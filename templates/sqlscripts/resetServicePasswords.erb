IF EXISTS(select * from sys.server_principals r where name = '<%= @dbuserprefix %>Aims')
BEGIN
  print 'Reset password for <%= @dbuserprefix %>Aims'
  ALTER LOGIN <%= @dbuserprefix %>Aims WITH PASSWORD = '<%= @srvlaimspass %>'
END

